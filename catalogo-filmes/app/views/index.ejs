        <% include includes/header.ejs %>
        <% include includes/menu.ejs %>
        <%=name %>

        <div ng-view></div>

        <%# forget it%>
        <md-content class="hide">
        	<div layout="row" layout-padding>
        		<div flex>
                    <md-input-container>
                        <label>{{constants.task}}</label>
                        <input ng-model="task" ng-enter="addTask()">
                      </md-input-container>
                      <md-button class="md-raised md-accent" ng-click="addTask()" >
                        <i class="fa fa-plus"></i>
                        {{constants.add}}
                      </md-button>
        		</div>
        	</div>
            <!-- Tasks Toolbar -->
            <div layout="column" layout-padding ng-cloak>
              <md-toolbar>
                <div class="md-toolbar-tools">
                  <h3>
                    <span>{{constants.tasks}}</span>
                  </h3>
                </div>
              </md-toolbar>
              <md-content flex>
                <md-list>
                  <md-list-item class="md-3-line" ng-repeat="task in tasks">
                    <div class="md-list-item-text">
                      <!-- <h3>{{task.id}}</h3> -->
                      <h4>{{task.name}}</h4>
                    </div>
                    <md-divider inset></md-divider>
                  </md-list-item>
                </md-list>
              </md-content>
            </div>
        </md-content>
    </body>
</html>
